{
  "compilerOptions": {
    "incremental": true,

    "target": "ESNext",

    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
  },

  "exclude": ["node_modules", "dist"],
  "include": ["src", "test", "*"]
}
